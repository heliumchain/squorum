
## <summary>policy for helium</summary>


########################################
## <summary>
##	Transition to helium.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`helium_domtrans',`
	gen_require(`
		type helium_t, helium_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, helium_exec_t, helium_t)
')


########################################
## <summary>
##	Execute helium server in the helium domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helium_initrc_domtrans',`
	gen_require(`
		type helium_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, helium_initrc_exec_t)
')


########################################
## <summary>
##	Search helium lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helium_search_lib',`
	gen_require(`
		type helium_var_lib_t;
	')

	allow $1 helium_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read helium lib files.
